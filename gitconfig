[push]
	default = simple
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[diff-so-fancy]
	stripLeadingSymbols = false
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red
	oldHighlight = red bold
	newNormal = green
	newHighlight = green bold
[color "diff"]
	meta = yellow
	frag = magenta
	commit = yellow bold
	old = red
	new = green
[core]
	pager = ~/dotfiles/diff-so-fancy | less --tabs=4 -RFX --pattern '^(Date|added|deleted|modified):'
